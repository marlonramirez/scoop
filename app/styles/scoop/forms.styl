label
    position relative
    margin 0 .5em
    cursor pointer

.btn
    background $gray
    border 0
    border-bottom 1px solid rgba(0, 0, 0, .25)
    border-radius .5em
    box-shadow 0 1px 3px rgba(0, 0, 0, .6)
    color white
    cursor pointer
    display inline-block
    font-weight 700
    padding .5em 1em
    margin .5em
    position relative
    text-shadow 0 -1px 1px rgba(0, 0 , 0, .25)
    &:hover
        background-color $gray-hover
    &:disabled
        background-color $bg-disable
        color $gray
        cursor not-allowed
        &:hover
            background-color $bg-disable

.input
    border-radius .3em
    border solid 1px $border-text
    margin .5em
    padding .5em
    vertical-align middle
    max-width 100%
    &:disabled
        cursor not-allowed
        background-color lighten($bg-disable, 60%)

.custom-input-file
    overflow hidden
    position relative
    cursor pointer
    .input-file
        outline 0
        font-size 10000px
        border 10000px solid transparent
        opacity 0
        filter unquote("alpha(opacity=50)")
        position absolute
        right -1000px
        top -1000px
        cursor pointer
        z-index 1

.group-box
    display inline-block
    margin 0 1em
    vertical-align top
    text-align left
    {scoopInputs}
        width 100%
        margin-top .2em
    .btn
        margin-top 1.6em
    i::after
        font 1em "FontAwesome"
        margin-left .3em
        vertical-align middle
    .error
        label, i
            color $red
        i::after
            content "\f057"
        {scoopInputs}
            border-color $red
    .success
        label, i
            color $green
        i::after
            content "\f058"
        {scoopInputs}
            border-color $green
    .warning
        label, i
            color $yellow
        i::after
            content "\f06a"
        {scoopInputs}
            border-color $yellow
    textarea
        height 120px

.radio
.checkbox
    input[type=radio]
    input[type='checkbox']
        display none
        & + label:before
            display inline-block
            color $border-text
            font-family FontAwesome
            font-style normal
            font-weight normal
            line-height 1
            padding-right .5em
            width 1em
            text-align left
        &:checked + label:before
        & + label:hover:before
            color $check-color
        &:disabled + label:before
            color $bg-disable
    input[type=radio]
        & + label:before
            content "\f10c"
        &:checked + label:before
            content "\f05d"
    input[type="checkbox"]
        & + label:before
            content "\f096"
        &:checked + label:before
            content "\f046"
    label
        padding-left 0
